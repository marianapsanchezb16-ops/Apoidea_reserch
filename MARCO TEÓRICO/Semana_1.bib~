@article{MORALES-ALBA2022,
   title = {{ABEJAS EN SISTEMAS AGR\~ACOLAS: REVISI\~A“N DE LA DIVERSIDAD TAXON\~A“MICA Y FUNCIONAL Y PERSPECTIVAS DE INVESTIGACI\~A“N}},
   journal = {{Acta Biol\~A\textthreesuperiorgica Colombiana}},
   author={MORALES-ALBA, Andr\~A\copyrights F. AND CARVAJAL-COGOLLO, Juan E. AND MORALES, Irina},
   ISSN = {0120-548X},
   language = {es},
   URL = {http://www.scielo.org.co/scielo.php?script=sci_arttext&pid=S0120-548X2022000200282&nrm=iso},
   volume = {27},
   year = {2022},
   month = {08},
   pages = {282 - 291},
   publisher = {scieloco},
   crossref = {10.15446/abc.v27n2.92192},
   resume={Se seleccionaron seis cultivos diferentes para la investigación, en los cuales se evidencien registros bibliográficos de presencia de polinizadores abejas, siendo cultivos de maracuyá, granadilla, papa, palma, café y gulupa. Y para los rasgos funcionales se utilizaron 3, todos categóricos, los cuales son: la presencia de corbícula, el grado de sociabilidad y el sitio de anidación. Mientras para la diversidad taxonómica, se tomo la riqueza de especies para cada cultivo. Para la riqueza de especies evidenciaron que los cultivos de palma y papa son los que albergan mayor riqueza de especies con 48 especies y 44 especies, respectivamente, del total de las 116 especies entre los seis cultivos, esa riqueza podría ser por la heterogeneidad de los cultivos o la variedad de formas florales, aunque algunos no son principalmente polinizados como la papa y no se ven afectados. 
Por el otro lado el cultivo de maracuyá solo registro una especie (*Xylocopa*). Para la representatividad funcional se clasificaron en 11 tipos funcionales, siendo los diferentes tipos que se pueden encontrar combinando los tres rasgos funcionales; pero es posible que se encuentre redundancia de los rasgos por tipos de cultivos.
Para la diversidad se dedujo que se encuentran más relacionadas con la cercanía de los sistemas naturales a los cultivos, que la complejidad del cultivo. 
Los cultivos pueden promover la diversidad de las abejas pero son un recurso alternativo debido a la poca disponibilidad de flores, por el mismo patron presentado en cultivos no se espera encontrar mucha variedad en los rasgos funcionales.}
   }

@article{Rosado-Martínez_Santos-Murgas_Cobos-Hernández_Carrero_Flórez-Villamizar_2024, 
title={Diversidad taxonómica de abejas de las orquídeas (apidae: Euglossini) y su relación con factores ambientales en áreas periurbanas de Yopal, Casanare, Colombia}, volume={21}, url={https://revistas.urp.edu.pe/index.php/Biotempo/article/view/6772}, DOI={10.31381/biotempo.v21i2.6772},
year={2024}, 
month={ago.}, 
pages={149-160} 
resume={En la investigación se realiza en dos zonas el parque de la Iguana y el Mirador de la virgen de Manare, los cuales se diferencian mayor mente por la cantidad de cobertura vegetal y altitud. Con dos métodos: trampas de botellas y método zigzag con red entomológica, los cuales no demuestran diferencias en su efectividad; son los usados para la colecta de los  280 individuos. Se realiza los análisis donde se evidencian las especies efectivas, las dominantes y las poco comunes. Con las pruebas no paramétricas que se realizaron no se encontraron diferencias en la abundancia en ambas zonas, pero si en respecto a los cuatro cebos utilizados ( Eugenol, Salicilato de metilo, Vainilla y Eucalipto), siendo el eucalipto y el eugenol con mayores diferencias, debido a que los terpenoides son aprovechados mayormente por machos. Se evidencio de igual manera la preferencia de cebos por las especies, siendo algunas capaces de usar multiples recursos. 
Pero hizo falta la contemplación de otros factores ambientales, ya sea pluviosidad, presión, las temporadas, eventos antrópicos.}
}

@article{rasmussen2024taxonomic,
  title={Taxonomic Impediment for Conservation: The Case of Bees in an Undersampled Tropical Mid-Elevation Site, San Mart{\'\i}n, Peru},
  author={Rasmussen, Claus and S{\'a}nchez, Evelyn},
  journal={Insects},
  volume={15},
  number={7},
  pages={544},
  year={2024},
  publisher={MDPI}
  resume={En la investigación se basa en la creación de una lista de especies locales basada en el inventario realizado en el Alto Mayo de Peru. Se centarone en tres zonas con diferentes cuerpos de agua cercanos y elevaciones diferentes las cuales pueden explicar la mezcla de fauna, junto con la vegeteación abundante. Para la colecta usaron un atrapa moscas o trampa para moscas con cebo de pez fermentado, cebos con miel rociada, y trampas con agua y jabón en los alrededores. Las muestras fueron procesadas y separadas por morfo especies, para su identificación, y luego la unificacion para unir sexos. 
Para los analisis estadisticos reportaron la riqueza, la diversidad alfa con los indices de shanon, diversidad beta sustrayendo los ods indices de 1. 
Obteniendo 1796 abejas de 181 especies o morfos, teniendo encuenta que algunas abejas de tamaño pequeño no se lograron identificar hasta especie; realizaron de igual manera algunas observaciones importantes de las flores donde se encontraban algunas especies ene l momento de colecta.
Las abejas de estas colonias reclutarán a las obreras hacia sitios gratificantes y, aunque sean poco frecuentes en cuanto al número de colonias, pueden parecer muy comunes a nivel local si muchas obreras de uno o varios nidos son reclutadas hacia una flor específica u otra fuente de alimento. También se recolectaron abejas eusociales de los nidos, pero limitamos la mayor parte de la recolección en dichos lugares a menos de 10 especímenes, aunque algunas de las especies agresivas se recolectaron en mayor número. Esto, nuevamente, afectará la abundancia. No registramos las interacciones florales ni las técnicas de trampeo para las listas de especies, lo que nos impide analizar más a fondo las interacciones y el rendimiento del trampeo [69], algo que debería fomentarse en futuros estudios. La alta proporción de especies indeterminadas de Halictidae, el taxón más numeroso en nuestro estudio, es un hecho poco apreciado que enfatiza la necesidad continua de apoyo taxonómico, incluso para grupos económicamente importantes, como las abejas polinizadoras. Estudios futuros deberían centrarse en la diversa estacionalidad y las diferentes zonas altitudinales para determinar la proporción relativa de los diferentes grupos de abejas y sus máximos de diversidad.}
}

@article{marconi2022dna,
  title={DNA Barcoding of stingless bees (Hymenoptera: Meliponini) in Northern Peruvian forests: A plea for integrative taxonomy},
  author={Marconi, Marilena and Modesti, Alessandro and Alvarez, Leydi Paz and Ogo{\~n}a, Paolo Villegas and Mendoza, Agust{\'\i}n Cerna and Vecco-Giove, Carlos Daniel and Luna, Javier Orme{\~n}o and Di Giulio, Andrea and Mancini, Emiliano},
  journal={Diversity},
  volume={14},
  number={8},
  pages={632},
  year={2022},
  publisher={MDPI}
  resume={En la investigación se realiza una comparación morfológica y de identificación basada en códigos de barras de ADN, para aquellos que son difíciles de identificar morfologicamente. Se seleccionaron 5 sitios basados en la accesibilidad a las zonas de bosque, capturándolos con red en las flores como un método directo y también 4 estaciones de cebo con pescado fermentado, fruta fermentada y popo de perro. 
Las abeja que se identificaron morfológicamente fueron por medio de claves dicotómicas o fotografías diagnosticas; las identificadas por códigos de barras de ADN extraído de la pata media, aplicando PCR para amplificar el fragmento de código de barras, alineando las secuencias COI obtenidas de las muestras con las disponibles en BOLD y NCBI. Se ecnoentraron 12 generos de la toda la muestra, centrandose en los más abundantes con los arboles COI  de la union de vecinos usando K2P y nombrando las menos representadas, describiendo cada una; asegurándose de la indetificación con el material de refeencia o consultando a especialistas en ciertos taxones, a pesar de eso 21 individuos no se logro llegar a un nivel de especie.}
}

@article{alonso2024first,
  title={First record of the stingless bee Tetragonisca buchwaldi (Friese, 1925)(Hymenoptera, Apidae, Meliponini) in Colombia},
  author={Alonso-Alarc{\'o}n, Jair and Guevara, Diego A and Guti{\'e}rrez-Chac{\'o}n, Catalina},
  journal={Check List},
  volume={20},
  number={6},
  pages={1286--1291},
  year={2024},
  publisher={Pensoft Publishers}
  resume={En la investigación examinaron el material del genero *Tetragonisca* en el estereomicroscopio, y tomando fotografías, obtenido del repositorio de LABUN (Laboratorio de Investigación en Abejas de la Universidad Nacional de Colombia). Con la obtención del primer registro en Colombia se entiende el rango de la especie vista en en la región del Chocó, mostrando la baja representatividad con solo 2 individuos de la zona donde se muestreo, las cuales la mayoría de la especies relacionadas encontradas fueron colectadas con red entomológica. }
}
